@using System.Security.Claims;

@using Microsoft.AspNetCore.Identity;
@{
    ViewData["Title"] = "AddFriend";
}

@model AppUser

<!DOCTYPE html>
<html>
<head>
    <title>Arkadaş Ekle</title>
    <!-- Bootstrap CSS Link -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>

<div class="container mt-5">
    <h1>Arkadaş Ekle</h1>

    <form method="post" asp-action="AddFriend" class="mt-3">
        <div class="form-group">
            <label for="searchString">Kullanıcıları kullanıcı adına göre arayın:</label>
            <input type="text" name="searchString" class="form-control" required />
        </div>
        <button type="submit" class="btn btn-primary">Kullanıcı Ara</button>
    </form>

        @if (TempData["FriendAdded"] != null)
        {
            <div class="alert alert-success mt-3">@TempData["FriendAdded"]</div>
        }
        else if (TempData["AlreadyFriends"] != null)
        {
            <div class="alert alert-info mt-3">@TempData["AlreadyFriends"]</div>
        }
        

        @if (Model != null)
        {
            <div class="mt-3">
                <h2>Kullanıcı Bilgileri</h2>
                
                <p>Kullanıcı Adı: @Model.UserName</p>
                <p>Email: @Model.Email</p>
            </div>
        }
        else
        {
                <p class="alert alert-danger mt-3">Kullanıcı bulunamadı.</p>
        }
        
</div>

<!-- Bootstrap JS and Popper.js CDN Links (Include these at the end of the body tag) -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>

<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</body>
</html>

